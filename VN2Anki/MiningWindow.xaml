<Window x:Class="VN2Anki.MiningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histórico de Mineração" Height="600" Width="800"
        Background="#1E1E1E" Foreground="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <ListBox x:Name="ListHistory" Background="Transparent" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="8" Margin="5" Padding="10">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOpen}" Value="True">
                                        <Setter Property="BorderBrush" Value="#28A745"/>
                                        <Setter Property="Background" Value="#1E3323"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="{Binding Thumbnail}" Width="150" Stretch="Uniform" Grid.Column="0" Margin="0,0,15,0" VerticalAlignment="Center"/>

                            <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding DisplayTime}" Grid.Row="0" Foreground="#007ACC" FontWeight="Bold" Margin="0,0,0,2" FontSize="12"/>
                                <TextBlock Text="{Binding Text}" Grid.Row="1" Foreground="#EAEAEA" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="45" FontSize="16"/>

                                <TextBlock Text="🔴 Gravando Áudio..." Grid.Row="2" Foreground="#FF5555" FontWeight="Bold" Margin="0,4,0,0" FontSize="12">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOpen}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Button Content="▶" Grid.Column="2" VerticalAlignment="Center" Cursor="Hand"
        Padding="12,8" Background="#28A745" Foreground="White" FontWeight="Bold" BorderThickness="0"
        Click="BtnPlay_Click" Tag="{Binding}" Margin="0,0,5,0" ToolTip="Ouvir Áudio"/>
                            
                            <Button Content="⛏" Grid.Column="3" VerticalAlignment="Center" Cursor="Hand"
        Padding="12,8" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0"
        Click="BtnMiner_Click" Tag="{Binding}" Margin="0,0,5,0" ToolTip="Enviar para o Anki"/>

                            <Button Content="🗑" Grid.Column="4" VerticalAlignment="Center" Cursor="Hand"
        Padding="12,8" Background="#DC3545" Foreground="White" FontWeight="Bold" BorderThickness="0"
        Click="BtnDelete_Click" Tag="{Binding}" ToolTip="Excluir slot"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>