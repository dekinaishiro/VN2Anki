<Window x:Class="VN2Anki.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:VN2Anki.Locales"
        Title="{x:Static loc:Strings.LblSettingsWindow}" Height="560" Width="550"
        Background="#252526" Foreground="White" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TabControl Background="Transparent" BorderThickness="0" Grid.Row="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#3F3F46"/>
                        <Setter Property="Foreground" Value="#EAEAEA"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="Margin" Value="0,0,2,0"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="TabBorder" 
                                        Background="{TemplateBinding Background}" 
                                        BorderThickness="0" 
                                        CornerRadius="4,4,0,0" 
                                        Padding="{TemplateBinding Padding}" 
                                        Margin="{TemplateBinding Margin}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" 
                                                      ContentSource="Header"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4d4d53"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#007ACC"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="{x:Static loc:Strings.HeaderConfig}">
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Static loc:Strings.LblAudioSource}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboAudio" Grid.Row="0" Grid.Column="1" DisplayMemberPath="DisplayName"/>
                        <Button Grid.Row="0" Grid.Column="2" Width="35" Height="35" Click="BtnRefreshAudio_Click" Padding="0">
                            <Viewbox Stretch="Uniform">
                                <Canvas Width="24" Height="24" Margin="4">
                                    <Path Fill="White" Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"/>
                                </Canvas>
                            </Viewbox>
                        </Button>
                        <TextBlock Text="{x:Static loc:Strings.LblVideoSource}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboVideo" Grid.Row="1" Grid.Column="1" DisplayMemberPath="DisplayName" SelectedValuePath="ProcessName"/>
                        <Button Grid.Row="1" Grid.Column="2" Width="35" Height="35" Click="BtnRefreshVideo_Click" Padding="0">
                            <Viewbox Stretch="Uniform">
                                <Canvas Width="24" Height="24" Margin="4">
                                    <Path Fill="White" Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"/>
                                </Canvas>
                            </Viewbox>
                        </Button>

                        <TextBlock Text="{x:Static loc:Strings.LblSlotLimit}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtMaxSlots" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Padding="5"/>

                        <TextBlock Text="{x:Static loc:Strings.LblTimeout}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtIdleTime" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Padding="5">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=ChkDynamicTimeout}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#444444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <CheckBox x:Name="ChkDynamicTimeout" Content="{x:Static loc:Strings.LblDynamicTimeout}" Foreground="White" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" VerticalAlignment="Center"/>

                        <TextBlock Text="{x:Static loc:Strings.LblLanguage}" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboLanguage" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" SelectionChanged="ComboLanguage_SelectionChanged">
                            <ComboBoxItem Content="English" Tag="en-US"/>
                            <ComboBoxItem Content="Español" Tag="es-ES"/>
                            <ComboBoxItem Content="Português" Tag="pt-BR"/>
                        </ComboBox>

                        <TextBlock Text="{x:Static loc:Strings.LblImageQuality}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboImageRes" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2">
                            <ComboBoxItem Content="Tamanho Original" Tag="0"/>
                            <ComboBoxItem Content="1080p (FHD)" Tag="1920"/>
                            <ComboBoxItem Content="720p (HD)" Tag="1280"/>
                            <ComboBoxItem Content="480p (SD)" Tag="854"/>
                            <ComboBoxItem Content="360p (LD)" Tag="640"/>
                        </ComboBox>

                        <TextBlock Text="{x:Static loc:Strings.LblAudioQuality}" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboAudioRes" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
                            <ComboBoxItem Content="WAV (original)" Tag="0"/>
                            <ComboBoxItem Content="MP3 192 kbps (HQ)" Tag="192"/>
                            <ComboBoxItem Content="MP3 128 kbps (Default)" Tag="128"/>
                            <ComboBoxItem Content="MP3 64 kbps (LQ)" Tag="64"/>
                        </ComboBox>

                        <CheckBox x:Name="ChkOpenSettings" Content="{x:Static loc:Strings.LblOpenSettingsOnStartup}" Foreground="White" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Margin="5,15,5,5" VerticalAlignment="Center" Checked="ChkOpenSettings_Checked"/>
                        <TextBlock Text="Text Hook Source:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboHookType" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2">
                            <ComboBoxItem Content="Clipboard" Tag="0"/>
                            <ComboBoxItem Content="WebSocket (Luna/Textractor)" Tag="1"/>
                        </ComboBox>

                        <TextBlock Text="WebSocket URL:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtWsUrl" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Padding="5" ToolTip="Luna: ws://localhost:2333/api/ws/text/origin | Textractor: ws://localhost:6677"/>
                    </Grid>
                </TabItem>

                <TabItem Header="{x:Static loc:Strings.HeaderAnki}">
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Static loc:Strings.LblDeck}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboDeck" Grid.Row="0" Grid.Column="1"/>
                        <Button Grid.Row="0" Grid.Column="2" Width="35" Height="35" Padding="0" Click="BtnRefreshAnki_Click">
                            <Viewbox Stretch="Uniform">
                                <Canvas Width="24" Height="24" Margin="4">
                                    <Path Fill="White" Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"/>
                                </Canvas>
                            </Viewbox>
                        </Button>

                        <TextBlock Text="{x:Static loc:Strings.LblNoteType}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboModel" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" SelectionChanged="ComboModel_SelectionChanged"/>

                        <TextBlock Text="{x:Static loc:Strings.LblAudioField}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboFieldAudio" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>

                        <TextBlock Text="{x:Static loc:Strings.LblImageField}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboFieldImage" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>

                        <TextBlock Text="AnkiConnect URL:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtAnkiUrl" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Padding="5"/>

                        <TextBlock Text="{x:Static loc:Strings.LblTimeout}" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtAnkiTimeout" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Padding="5"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Overlay">
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Background Color (Hex):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtBgColor" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5"/>

                        <TextBlock Text="Font Color (Hex):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtFontColor" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5"/>

                        <TextBlock Text="Font Size:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <TextBox x:Name="TxtFontSize" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5"/>

                        <TextBlock Text="Pass-Through Hold Key:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal"/>
                        <ComboBox x:Name="ComboPassModifier" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5">
                            <ComboBoxItem Content="Ctrl" Tag="Ctrl"/>
                            <ComboBoxItem Content="Alt" Tag="Alt"/>
                            <ComboBoxItem Content="Shift" Tag="Shift"/>
                        </ComboBox>

                        <TextBlock Text="Custom Extensions Paths:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="Normal" Margin="5,15,5,5"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Margin="0,10,5,0">
                            <Button Content="⚙️" Width="30" Click="BtnExtensionSettings_Click" ToolTip="Open Yomitan Settings"/>
                            <Button Content="+" Width="30" Click="BtnAddExtension_Click" ToolTip="Add Custom Extension"/>
                            <Button Content="-" Width="30" Click="BtnRemoveExtension_Click" ToolTip="Remove Selected Extension"/>
                        </StackPanel>
                        <ListBox x:Name="ListExtensions" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Background="#333" Foreground="White" BorderThickness="0"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <Button Content="{x:Static loc:Strings.BtnSaveClose}" Background="#28A745" Grid.Row="1" Margin="0,20,0,0" Height="40" FontSize="14" Click="BtnSave_Click"/>
        </Grid>
    </ScrollViewer>
</Window>